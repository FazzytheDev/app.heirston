<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telegram Mini App</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
</head>
<body>
    <script>
        Telegram.WebApp.ready();

        // Get the initData from Telegram WebApp
        const initData = Telegram.WebApp.initData;
        console.log('Received initData:', initData);

        // Redirect to the backend with the initData query string
        if (initData) {
            window.location.href = `/dashboard?initData=${encodeURIComponent(initData)}`;
        } else {
            document.body.innerHTML = 'Failed to retrieve initData from Telegram.';
        }
    </script>
</body>
</html>
